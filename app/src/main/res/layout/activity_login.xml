<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllActivity.LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#f5f7b2"
        android:textAlignment="center"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textSize="40dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="#ffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="56dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_local_see_24"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo Editor"
            android:textAlignment="center"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="45dp">


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Username"
            android:layout_margin="10dp"
            android:id="@+id/lgn_nama"
            android:inputType="textPersonName"
            android:hint="nama"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Password"
            android:layout_margin="10dp"
            android:id="@+id/lgn_password"
            android:inputType="textPassword"
            android:hint="password"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:backgroundTint="#f5f7b2"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="LOG IN"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#f5f7b2"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UAS 2021"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textSize="40dp"/>


    </LinearLayout>

</LinearLayout>